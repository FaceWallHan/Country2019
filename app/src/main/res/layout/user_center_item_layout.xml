<?xml version="1.0" encoding="utf-8"?>
<com.end.summer.tools.SideLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/sideLayout"
    android:layout_width="match_parent"
    android:layout_height="180dp">
    <LinearLayout
            android:padding="10dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/sex"
                android:layout_width="150dp"
                android:layout_height="150dp" />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/username_item"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:text="用户名：XXX"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/name_item"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:text="姓名：XXX"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tel_item"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:text="电话：13963507464"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/root"
                    android:textStyle="bold"
                    android:background="#ffff00"
                    android:gravity="center"
                    android:text="一般管理员"
                    android:textSize="20sp"
                    android:layout_width="200dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
                <TextView
                    android:id="@+id/look"
                    android:textStyle="bold"
                    android:background="@drawable/yuan_black"
                    android:gravity="center"
                    android:text="查看详情"
                    android:textSize="20sp"
                    android:layout_width="150dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/collection"
                android:background="#11FF00"
                android:gravity="center"
                android:textColor="#fff"
                android:text="收藏"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
</com.end.summer.tools.SideLayout>